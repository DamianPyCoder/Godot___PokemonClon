<odoo>
  <data>

    <record model="ir.ui.view" id="infomusic.song_list">
      <field name="name">infomusic song list</field>
      <field name="model">infomusic.song</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="order"/>
          <field name="duration" widget="float_time"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="infomusic.song_form">
      <field name="name">infomusic song form</field>
      <field name="model">infomusic.song</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <h1>
              <field name="name"/>
            </h1>
            <group>
              <field name="order"/>
              <field name="duration" widget="float_time"/>
            </group>
          </sheet>        
        </form>
      </field>
    </record>

  </data>
</odoo>