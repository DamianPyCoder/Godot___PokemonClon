<odoo>
  <data>

    <record model="ir.ui.view" id="infomusicplus.tour_city_list">
      <field name="name">infomusicplus tour city list</field>
      <field name="model">infomusicplus.tour.city</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="country_id"/>
          <field name="date"/>
          <field name="confirmed"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="infomusicplus.tour_city_form">
      <field name="name">infomusicplus tour city form</field>
      <field name="model">infomusicplus.tour.city</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <h1>
              <field name="name"/>
            </h1>
            <group>
              <field name="country_id"/>
              <field name="date"/>
              <field name="confirmed"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

  </data>
</odoo>